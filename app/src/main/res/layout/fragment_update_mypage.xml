<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".updateMypageFragment">

    <ImageView
        android:id="@+id/txt_my_before_image"
        android:layout_width="98dp"
        android:layout_height="101dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="100dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="닉네임"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txt_before_my_name"
        app:layout_constraintEnd_toStartOf="@+id/txt_before_my_name"
        app:layout_constraintTop_toTopOf="@+id/txt_before_my_name" />

    <EditText
        android:id="@+id/txt_before_my_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:inputType="text"
        android:text="항공대 마하"
        app:layout_constraintTop_toBottomOf="@+id/txt_my_before_image"
        tools:layout_editor_absoluteX="108dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="이메일"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txt_before_my_email"
        app:layout_constraintEnd_toStartOf="@+id/txt_before_my_email"
        app:layout_constraintTop_toTopOf="@+id/txt_before_my_email" />

    <EditText
        android:id="@+id/txt_before_my_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="text"
        android:text="abc@kau.ac.kr"
        app:layout_constraintTop_toBottomOf="@+id/txt_before_my_name"
        tools:layout_editor_absoluteX="106dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="학교"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txt_before_my_school"
        app:layout_constraintEnd_toStartOf="@+id/txt_before_my_school"
        app:layout_constraintTop_toTopOf="@+id/txt_before_my_school" />

    <EditText
        android:id="@+id/txt_before_my_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="text"
        android:text="항공대"
        app:layout_constraintEnd_toEndOf="@+id/txt_before_my_email"
        app:layout_constraintStart_toStartOf="@+id/txt_before_my_email"
        app:layout_constraintTop_toBottomOf="@+id/txt_before_my_email" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="전공"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txt_before_my_major"
        app:layout_constraintEnd_toStartOf="@+id/txt_before_my_major"
        app:layout_constraintTop_toTopOf="@+id/txt_before_my_major" />

    <EditText
        android:id="@+id/txt_before_my_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="text"
        android:text="소프트웨어"
        app:layout_constraintEnd_toEndOf="@+id/txt_before_my_school"
        app:layout_constraintStart_toStartOf="@+id/txt_before_my_school"
        app:layout_constraintTop_toBottomOf="@+id/txt_before_my_school" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="117dp"
        android:layout_height="61dp"
        android:layout_marginTop="20dp"
        android:text="수정하기"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_before_my_major" />

</androidx.constraintlayout.widget.ConstraintLayout>