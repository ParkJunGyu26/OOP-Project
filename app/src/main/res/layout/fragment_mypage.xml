<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MypageFragment" >

    <TextView
        android:id="@+id/txt_my_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="170dp"
        android:text=""
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/txt_my_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="님"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_my_name"
        app:layout_constraintStart_toEndOf="@+id/txt_my_name"
        app:layout_constraintTop_toTopOf="@+id/txt_my_name" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="오늘의 취미는 무엇인가요?"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/txt_my_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_my_name" />

    <ImageView
        android:id="@+id/txt_my_image"
        android:layout_width="72dp"
        android:layout_height="71dp"
        android:layout_marginStart="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_my_name"
        tools:src="@tools:sample/avatars" />

    <Button
        android:id="@+id/btn_mypage_to_update"
        android:layout_width="244dp"
        android:layout_height="73dp"
        android:layout_marginTop="70dp"
        android:layout_weight="1"
        android:drawableLeft="@drawable/baseline_shopping_bag2_24"
        android:text="정보 수정"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <Button
        android:id="@+id/btn_mypage_to_log"
        android:layout_width="244dp"
        android:layout_height="73dp"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:drawableLeft="@drawable/baseline_list_alt_24"
        android:text="내 활동 목록"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_mypage_to_update" />

</androidx.constraintlayout.widget.ConstraintLayout>